<div class="row">
  <% if obj.errors.any? %>
    <div class="col-md-8 offset-md-2">
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">
          <%= pluralize(obj.errors.count, "error")%>
          prohibited this article from being saved:
        </h4>
        <ul>
          <% obj.errors.full_messages.each do |err| %>
            <li><%= err %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>